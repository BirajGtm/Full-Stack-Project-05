<!-- order-details.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order Details</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4d6cc;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      main {
        text-align: center;
      }

      h1 {
        background-color: #64170f;
        color: white;
        padding: 15px;
        border-radius: 6px;
        box-shadow: 0px 16px 15px 0px rgb(247 138 138 / 36%);
      }

      div {
        background-color: white;
        margin: 10px;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        text-align: left;
        display: flex;
        width: 50vw;
      }
      form {
        display: flex;
        flex-direction: column;
        flex: 1;
        align-items: center;
        justify-content: center;
      }
      button {
        width: 30%;
        padding: 10px;
        color: white;
        background-color: #64170f;
        font-weight: bold;
        border: 0;
        border-radius: 5px;
      }
      button:hover {
        box-shadow: 5px 5px 5px #64170f94;
      }

      input {
        width: 40%;
        padding: 10px;
        margin: 10px;
        border-radius: 10px;
      }
      .error {
        width: 100%;
        height: 20px;
        color: #64170f94;
        border: 1px solid #64170f94;
        background-color: #f4d6cc;
        border-radius: 10px;
      }
      .success {
        width: 100%;
        height: 20px;
        color: #0f641994;
        border: 1px solid #0f641994;
        background-color: #ccf4ce;
        border-radius: 10px;
      }
    </style>
  </head>
  <body>
    <main>
      <% if (messages.error) { %>
        <div class="error"><%= messages.error %></div>
        <% } %>
        <% if (messages.success) { %>
        <div class="success"><%= messages.success %></div>
        <% } %>
      <h1>Delivery Personnel Login</h1>

      <div>
        <form action="/delivery/login" method="post">
          <label for="username">Username: </label>
          <input type="text" id="username" name="username" required /><br />
          <label for="password">Password: </label>
          <input type="password" id="password" name="password" required /><br />
          <button type="submit">Login</button>
        </form>
      </div>
     
    </main>
  </body>
</html>
