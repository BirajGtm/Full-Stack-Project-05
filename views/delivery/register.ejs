<!-- order-details.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order Details</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4d6cc;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      main {
        text-align: center;
      }

      h1 {
        background-color: #64170f;
        color: white;
        padding: 15px;
        border-radius: 6px;
        box-shadow: 0px 16px 15px 0px rgb(247 138 138 / 36%);
      }

      .wrapper {
        background-color: white;
        margin: 10px;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        text-align: left;
        display: flex;
        width: 50vw;
      }
      form {
        display: flex;
        flex-direction: column;
        flex: 1;
        align-items: center;
        justify-content: center;
        padding: 20px 0;
      }
      button {
        width: 30%;
        padding: 10px;
        color: white;
        background-color: #64170f;
        font-weight: bold;
        border: 0;
        border-radius: 5px;
        margin-top: 25px;
      }
      button:hover {
        box-shadow: 5px 5px 5px #64170f94;
      }

      .form-group {
        width: 70%;
        display: flex;
        justify-content: center;
        align-items: center;
        border-bottom: 1px solid #64170f94;
        margin-bottom: 5px;
      }

      label {
        flex: 1;
      }

      input {
        flex: 2;
        width: 80%;
        padding: 10px;
        margin: 10px;
        border-radius: 10px;
        background-color: #f4d6cc;
      }
      .error {
        width: 100%;
        height: 20px;
        color: #64170f94;
        border: 1px solid #64170f94;
        background-color: #f4d6cc;
        border-radius: 10px;
      }
      .success {
        width: 100%;
        height: 20px;
        color: #0f641994;
        border: 1px solid #0f641994;
        background-color: #ccf4ce;
        border-radius: 10px;
      }
    </style>
  </head>
  <body>
    <main>
      <h1>Delivery Personnel Registration</h1>
      <% if (messages.error) { %>
      <div class="error"><%= messages.error %></div>
      <% } %> <% if (messages.success) { %>
      <div class="success"><%= messages.success %></div>
      <% } %>

      <div class="wrapper">
        <form action="/delivery/register" method="post">
          <div class="form-group">
            <label for="username">Username: </label>
            <input type="text" id="username" name="username" required /><br />
          </div>
          <div class="form-group">
            <label for="password">Password: </label>
            <input
              type="password"
              id="password"
              name="password"
              required
            /><br />
          </div>

          <div class="form-group">
            <label for="name">Full Name: </label>
            <input type="text" id="name" name="name" required />
          </div>

          <div class="form-group">
            <label for="vehicle_model">Vehicle Model: </label>
            <input
              type="text"
              id="vehicle_model"
              name="vehicle_model"
              required
            />
          </div>

          <div class="form-group">
            <label for="vehicle_color">Vehicle Color: </label>
            <input
              type="text"
              id="vehicle_color"
              name="vehicle_color"
              required
            />
          </div>

          <div class="form-group">
            <label for="license_plate">Lisence Plate: </label>
            <input
              type="text"
              id="license_plate"
              name="license_plate"
              required
            />
          </div>

          <button type="submit">Register</button>
          <h3>Already a user ? Login here.</h3>
          <a href="/delivery/login">Login</a>
        </form>
      </div>
    </main>
  </body>
</html>
